<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/loginFragment"
    >

    <fragment
        android:id="@+id/encuestalist"
        android:name="unpsjb.ing.tntpm2024.listado.EncuestaListFragment"
        android:label="EncuestaListFragment"
        tools:layout="@layout/fragment_inicio">
        <action
            android:id="@+id/action_encuestalist_to_encuestaFragment"
            app:destination="@id/nuevaEncuestaFragment" />
        <action
            android:id="@+id/action_encuestalist_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="unpsjb.ing.tntpm2024.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_encuestalist"
            app:destination="@id/encuestalist" />
    </fragment>
    <fragment
        android:id="@+id/nuevaEncuestaFragment"
        android:name="unpsjb.ing.tntpm2024.encuesta.EncuestaFragment"
        android:label="fragment_encuesta"
        tools:layout="@layout/fragment_encuesta">
        <argument
            android:name="aliemento"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="frecuencia"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="porcion"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="veces"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="encuestaCompletada"
            app:argType="boolean" />
        <argument
            android:name="encuestaId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="unpsjb.ing.tntpm2024.detalle.DetailFragment"
        android:label="DetailFragment"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="desc"
            app:argType="string" />
    </fragment>


</navigation>